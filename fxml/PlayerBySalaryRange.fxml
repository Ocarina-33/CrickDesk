        <Text fill="WHITE" layoutX="188.0" layoutY="68.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Minimum Salary :">
            <font>
                <Font name="Georgia Bold" size="18.0" />
            </font>
        </Text>
        <Button fx:id="searchButton" layoutX="642.0" layoutY="164.0" mnemonicParsing="false" onAction="#handleSearchBySalaryRange" prefHeight="41.0" prefWidth="87.0" styleClass="base-button" text="Search" />
