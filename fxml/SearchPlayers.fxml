<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="530.0" prefWidth="750.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SearchPlayers">
   <ImageView fitHeight="530.0" fitWidth="750.0" layoutX="8.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../images/sp1.png" />
      </image>
   </ImageView>
   <Button fx:id="searchName" layoutX="86.0" layoutY="120.0" mnemonicParsing="false" onAction="#searchPlayerbyName" prefHeight="46.0" prefWidth="158.0" styleClass="addPlayer-button" text="Player Name" />
   <Button fx:id="searchClub" layoutX="86.0" layoutY="224.0" mnemonicParsing="false" onAction="#searchPlayerbyClubAndCountry" prefHeight="46.0" prefWidth="158.0" styleClass="addPlayer-button" text="Club or Country" />
   <Button fx:id="searchPosition" layoutX="329.0" layoutY="120.0" mnemonicParsing="false" onAction="#searchPlayerbyPosition" prefHeight="46.0" prefWidth="145.0" styleClass="addPlayer-button" text="Position" />
   <Button fx:id="searchSalaryRange" layoutX="86.0" layoutY="320.0" mnemonicParsing="false" onAction="#searchPlayerBySalaryRange" prefHeight="46.0" prefWidth="158.0" styleClass="addPlayer-button" text="Salary Range" />
   <Button fx:id="countryWiseCount" layoutX="329.0" layoutY="224.0" mnemonicParsing="false" onAction="#CountryWiseCount" prefHeight="46.0" prefWidth="234.0" styleClass="addPlayer-button" text="Country-Wise PLayer Count" />
   <Button fx:id="backButton" layoutX="34.0" layoutY="435.0" mnemonicParsing="false" onAction="#back" prefHeight="68.0" prefWidth="70.0" styleClass="back-button" />
</AnchorPane>
